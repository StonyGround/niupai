<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">


        <com.jhjj9158.niupaivideo.widget.ResizableImageView
            android:id="@+id/iv_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>


        <TextView
            android:id="@+id/tv_video_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_video"
            android:textColor="@color/button_login"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_video_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_video"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_video_size"
            android:textColor="@color/button_login"
            android:textSize="10sp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/tv_video_size"
            android:layout_marginLeft="10dp"
            android:src="@drawable/me_user_admin"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"/>

        <TextView
            android:id="@+id/tv_video_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_head"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/tv_black_my"
            android:textSize="14sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
